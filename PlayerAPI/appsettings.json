{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "User ID=<user>;Password=<password>;Host=localhost;Port=5432;Database=<database>;"
  },
  "PlayerConfig": {
    "BasePath": "<path_to_music_directory>",
    "FifoFile": "/tmp/player_fifo"
  },
  "GPIOConfig": {
    "StatusLED": -1,
    "PowerLED": -1,
    "NextButton": -1,
    "PreviousButton": -1,
    "PauseButton": -1, 
    "PlayButton": -1,
    "VolumeUpButton": -1,
    "VolumeDownButton": -1
  },
  "VolumeConfig": {
    "MaxVolume": 100,
    "MinVolume": 0,
    "DefaultVolume": 30,
    "VolumeStep": 5
  }
}
